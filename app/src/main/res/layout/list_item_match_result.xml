<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/tvVs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="vs" />

    <TextView
        android:id="@+id/tvHomeTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvVs"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/tvVs"
        android:text="德黑兰独立" />

    <TextView
        android:id="@+id/tvAwayTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvVs"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/tvVs"
        android:text="拉什特" />

    <TextView
        android:id="@+id/tvMatchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvHomeTeam"
        android:layout_alignRight="@+id/tvHomeTeam"
        android:layout_marginBottom="5dp"
        android:text="20:30" />

    <TextView
        android:id="@+id/tvMatchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvMatchTime"
        android:layout_alignBottom="@+id/tvMatchTime"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/tvMatchTime"
        android:layout_toStartOf="@+id/tvMatchTime"
        android:text="伊朗超"
        android:textColor="@color/green_6fb338" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_c1c1c1"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
